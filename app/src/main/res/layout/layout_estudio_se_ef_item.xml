<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#f0f0f0"
        android:clickable="true"
        android:orientation="horizontal"
        android:windowSharedElementsUseOverlay="false">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="54dp"
            android:layout_weight="1"
            android:text="TITULO"
            android:textSize="@dimen/text_detail_title"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="54dp"
            android:layout_weight="6"
            android:gravity="center"
            android:rotation="180"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24px" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="92dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/MyHintText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_nombres"
                android:maxLines="1"
                android:singleLine="true"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="92dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/MyHintText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_apellido_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_primer_apellido"
                android:maxLines="1"
                android:singleLine="true"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="92dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/MyHintText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_apellido_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_segundo_apellido"
                android:maxLines="1"
                android:singleLine="true"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="34dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/prompt_fecha_nacimiento"
                    android:textSize="@dimen/text_sub_title"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/MyHintText">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_fecha_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:hint="Fecha"
                        android:inputType="date"
                        android:focusable="false"
                        android:clickable="true"
                        android:maxLines="1"
                        android:theme="@style/MyEditText" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="34dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/prompt_genero"
                    android:textSize="@dimen/text_sub_title"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_hombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:checked="true"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/rb_mujer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:text="Mujer" />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="92dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:hintTextAppearance="@style/MyHintText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_entidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_entidad_nacimiento"
                android:maxLines="1"
                android:singleLine="true"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="92dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:hintTextAppearance="@style/MyHintText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_curp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="@string/prompt_curp"
                android:maxLines="1"
                android:singleLine="true"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="34dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Estado civil"
                    android:textSize="@dimen/text_sub_title"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_estado_civil"
                    style="@style/Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:entries="@array/estado_civil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="34dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Parentesco"
                    android:textSize="@dimen/text_sub_title"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sp_parentesco"
                    style="@style/Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:entries="@array/parentesco" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="34dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/prompt_escolaridad"
            android:textSize="@dimen/text_sub_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_grado"
                style="@style/Spinner"
                android:layout_width="162dp"
                android:layout_height="56dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:background="@drawable/bg_spinner"
                android:entries="@array/escolariadd" />

            <Spinner
                android:id="@+id/sp_nivel"
                style="@style/Spinner"
                android:layout_width="162dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:background="@drawable/bg_spinner"
                android:entries="@array/grado" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="92dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            app:hintTextAppearance="@style/MyHintText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_asiste_escuela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="Asiste a la escuelaâ€¦"
                android:maxLines="1"
                android:singleLine="true"
                android:theme="@style/MyEditText" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>