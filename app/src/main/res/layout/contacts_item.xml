<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvContenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:focusable="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_iniciales"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:text="SM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_colonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6sp"
                android:text="Santa María Tequepexpan"
                android:textColor="@color/text_bold"
                android:textSize="@dimen/text_bold"
                android:textStyle="normal"
                android:lines="1"/>

            <TextView
                android:id="@+id/tv_domicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:text="C.P. 45340 Jalisco , México"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_light"
                android:textStyle="normal"
                android:lines="1"/>

            <TextView
                android:id="@+id/tv_beneficiarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="7sp"
                android:text="65 beneficiarios"
                android:textColor="@color/text_light"
                android:textSize="@dimen/text_light"
                android:textStyle="normal"
                android:lines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginRight="13dp"
                android:button="@drawable/custom_checkbox"
                android:text="@null" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
